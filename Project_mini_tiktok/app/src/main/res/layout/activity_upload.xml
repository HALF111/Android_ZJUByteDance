<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UploadActivity">

    <VideoView
        android:id="@+id/sd_video"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="20dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_submit_video1"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_button"
            android:onClick="record"
            android:text="拍摄视频"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_submit_video2"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_button"
            android:text="上传已有视频"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sd_cover"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:actualImageScaleType="centerCrop"
        app:placeholderImage="@drawable/bg_round_rect"
        android:layout_margin="20dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_submit_picture1"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_button"
            android:onClick="takePhoto"
            android:text="拍摄封面"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_submit_picture2"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_button"
            android:text="上传已有图片"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <!--    <EditText-->
    <!--        android:id="@+id/et_to"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="60dp"-->
    <!--        android:layout_marginTop="10dp"-->
    <!--        android:background="@drawable/bg_round_rect"-->
    <!--        android:layout_marginHorizontal="20dp"-->
    <!--        android:hint="你的名字"-->
    <!--        android:maxLines="1"-->
    <!--        android:padding="6dp" />-->

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:maxLines="3"
        android:layout_marginTop="15dp"
        android:padding="6dp"
        android:layout_marginHorizontal="20dp"
        android:hint="视频标题"
        android:background="@drawable/bg_round_rect"
        />


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_button"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="30sp" />

</LinearLayout>